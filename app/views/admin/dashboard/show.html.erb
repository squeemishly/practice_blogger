<h1>Admin Dashboard</h1>

<h3>Find a User by Username</h3>
<%= form_tag(admin_dashboard_path(current_user.id), method: :get) do %>
  <%= text_field_tag(:user_search, params[:search]) %>
  <%= submit_tag "Search" %>
<% end %>

<ul>
  <% if @users %>
    <% @users.each do |user| %>
      <li><%= user.username %></li>
    <% end %>
  <% end %>
</ul>

<h3>Find a Articles by Creator's Username</h3>
<%= form_tag(admin_dashboard_path(current_user.id), method: :get) do %>
  <%= text_field_tag(:article_search, params[:search]) %>
  <%= submit_tag "Search" %>
<% end %>

<ul>
  <% if @found_articles %>
    <% @found_articles.each do |article| %>
      <li><%= link_to article.title, article_path(article.id) %> written by <%= article.user.username %></li>
    <% end %>
  <% end %>
</ul>

<h3>Recent Activity</h3>

<ul>
  <% @articles.each do |article| %>
    <li><strong><%= link_to article.title, article_path(article.id) %></strong> by <%= article.user.username %></li>
  <% end %>
</ul>
