<h1>Welcome!</h1>
<h3>Please Sign In to Contribute</h3>

<%= form_for(:session, url: login_path, html: { class: "form user-form" }) do |f| %>
  <%= f.label :username, class: 'label' %>
  <%= f.text_field :username, class: 'text_input' %>

  <%= f.label :password, class: 'label' %>
  <%= f.password_field :password, class: 'text_input' %>

  <div>
    <%= f.submit "Login", class: 'btn login-submit' %>
  </div>

<% end %>

<h3>Don't have an account? <%= link_to "Create Account", new_user_path %></h3>
